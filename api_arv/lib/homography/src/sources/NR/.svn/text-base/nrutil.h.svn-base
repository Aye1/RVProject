inline
int tvABS (int a)
{
  return abs (a);
}

inline
float tvABS (float a)
{
  return fabsf (a);
}

inline
double tvABS (double a)
{
  return fabs (a);
}

inline
int tvSQRT (int a)
{
  return (int)sqrtf ((float)a);
}

inline
float tvSQRT (float a)
{
  return sqrtf (a);
}

inline
double tvSQRT (double a)
{
  return sqrt (a);
}


